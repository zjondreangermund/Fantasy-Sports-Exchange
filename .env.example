# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fantasy_sports

# Server
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000

# Frontend API base (used by Capacitor/mobile builds)
VITE_API_URL=https://fantasy-sports-exchange-production-b10a.up.railway.app

# Session & Auth
SESSION_SECRET=change_me_to_a_random_secure_string_min_32_chars

# Google OAuth (for production)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Admin Users (comma-separated Google user IDs)
ADMIN_USER_IDS=your_google_user_id_1,your_google_user_id_2

# Development/Testing Mode (skip real auth)
USE_MOCK_AUTH=true
MOCK_USER_ID=demo-buyer-1
MOCK_FIRST_NAME=Demo
MOCK_LAST_NAME=Buyer

# Replit (auto-set on Replit, leave empty otherwise)
# REPL_ID=
